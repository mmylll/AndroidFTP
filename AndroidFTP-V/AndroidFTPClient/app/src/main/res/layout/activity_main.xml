<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP地址:"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_ip"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="服务端IP地址"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="端口号："
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_port"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="服务端端口号"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_conn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#bfbdbd" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:paddingVertical="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textUsername"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="username" />

            <EditText
                android:id="@+id/editUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入用户名" />

            <Button
                android:id="@+id/btUser"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="USER" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPassword"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="password" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入密码" />

            <Button
                android:id="@+id/btPass"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="PASS" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textMode"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Mode" />

            <Spinner
                android:id="@+id/spMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/mode"
                android:layout_weight="1"
                android:padding="10sp">

            </Spinner>

            <Button
                android:id="@+id/btMode"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="choose" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPattern"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Pattern" />

            <Spinner
                android:id="@+id/spPattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10sp"
                android:entries="@array/pattern" />

            <Button
                android:id="@+id/btPattern"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="choose" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textType"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Type" />

            <Spinner
                android:id="@+id/spType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:entries="@array/type"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btType"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="choose" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textStru"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Stru" />

            <Spinner
                android:id="@+id/spStru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:entries="@array/stru"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btStru"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="choose" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textDownload"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="download" />

            <EditText
                android:id="@+id/editDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入下载的文件名" />

            <Button
                android:id="@+id/btDownload"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="DOWNLOAD" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textUpload"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="upload" />

            <EditText
                android:id="@+id/editUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入上传的文件名" />

            <Button
                android:id="@+id/btUpload"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="UPLOAD" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
